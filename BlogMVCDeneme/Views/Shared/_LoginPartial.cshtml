                <li>@Html.ActionLink("Makale Yaz", "MakaleYaz", "Yazar", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                <li>@Html.ActionLink("Sayfam", "YazarSayfa", "Yazar", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Çıkış</a></li>
            </ul>
        }

    }
    else if (User.IsInRole("Editör"))
    {
