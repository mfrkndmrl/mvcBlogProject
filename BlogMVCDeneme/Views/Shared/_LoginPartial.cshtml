@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    
    if(User.IsInRole("Admin"))
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                <li>@Html.ActionLink("Makale İzin", "Index", "Editor", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                <li>@Html.ActionLink("Tüm Makaleler", "TümMakaleGör", "Editor", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
