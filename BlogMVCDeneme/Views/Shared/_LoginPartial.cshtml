                <li>@Html.ActionLink("Sayfam", "YazarSayfa", "Yazar", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Çıkış</a></li>
            </ul>
        }

    }
    else
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
